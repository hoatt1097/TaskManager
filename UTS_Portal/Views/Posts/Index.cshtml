@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<UTS_Portal.Models.Posts>
@{
    int CurrentPage = ViewBag.CurrentPage;
    int Total = ViewBag.Total;
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home"></i>Posts</a>
            <span class="breadcrumb-item active">List: @Total posts</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row mb-2">
            <div class="col-lg-8">
                <a class="btn btn-primary" asp-controller="Posts" asp-action="Create"><i class="anticon anticon-plus-circle m-r-5"></i><span>New</span></a>
            </div>
            <div class="col-lg-4 text-right">

            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Views</th>
                        <th style="width: 120px">Status</th>
                        <th style="width: 200px">Created Date</th>
                        <th style="width: 180px">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {

                        var i = 1;
                        foreach (var item in Model)
                        {
                    <tr>
                        <td>@i</td>
                        <td><img src="~/images/news/@item.Thumb" alt="@item.Title" style="height:40px" /></td>
                        <td><a asp-controller="Posts" asp-action="Details" asp-route-id="@item.Alias">@item.Title</a></td>
                        <td>
                            <div class="d-flex align-items-center">
                                @if (item.Published == true)
                                {
                                    <div class="badge badge-success badge-dot mt-1">
                                        <span>Public</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="badge badge-secondary badge-dot mt-1">
                                        <span>Non-Public</span>
                                    </div>
                                }
                            </div>
                        </td>
                        <td>@item.Views</td>
                        <td>@item.CreatedDate</td>
                        <td>
                            <a href="@Url.Action("Details", "Posts")/@item.Alias" target="_blank" class="btn btn-primary btn-sm">View</a>
                            <a class="btn btn-secondary btn-sm" asp-controller="Posts" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-danger btn-sm text-white" onclick="Delete('@Url.Action("Delete","Posts")/@item.Id')">Delete</a>
                        </td>
                    </tr>
                            i++;
                        }
                    }

                </tbody>
            </table>
            <div>
                <ul class="pagination justify-content-end">
                    <pager class="pager-container" list="@Model" asp-controller="Posts" asp-action="Index" />
                </ul>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script>

        function Delete(url) {
            $.confirm({
                title: 'Confirm!',
                content: 'Do you want to delete this post!',
                buttons: {
                    confirm: function () {
                        $.ajax({
                            type: "POST",
                            url: url,
                            success: function (data) {
                                if (data.success) {
                                    $.confirm({
                                        title: 'Successfully!',
                                        content: data.message,
                                        type: 'green',
                                        typeAnimated: true,
                                        buttons: {
                                            Ok: {
                                                btnClass: 'btn-success',
                                                action: function () {
                                                    window.location.reload();
                                                }
                                            },
                                        }
                                    });
                                }
                                else {
                                    $.confirm({
                                        title: 'Error!',
                                        content: data.message,
                                        type: 'red',
                                        typeAnimated: true,
                                        buttons: {
                                            Ok: {
                                                btnClass: 'btn-red',
                                                action: function () {

                                                }
                                            },
                                        }
                                    });
                                }
                            }
                        });
                    },
                    cancel: function () {
                            
                    },
                }
            });
        }
    </script>
}