@using UTS_Portal.Helpers

@{
    string fullname = User.Claims.FirstOrDefault(x => x.Type.Equals("Fullname", StringComparison.OrdinalIgnoreCase))?.Value;
    string username = User.Claims.FirstOrDefault(x => x.Type.Equals("Username", StringComparison.OrdinalIgnoreCase))?.Value;
    string parentCode = User.Claims.FirstOrDefault(x => x.Type.Equals("Code", StringComparison.OrdinalIgnoreCase))?.Value;

    string RoleName = User.Claims.FirstOrDefault(x => x.Type.Equals("RoleName", StringComparison.OrdinalIgnoreCase))?.Value;

    string notiCount = "0";
    var count = new Byte[20];
    bool notiCountBl = Context.Session.TryGetValue("NotiCount", out count);
    if (notiCountBl) { notiCount = System.Text.Encoding.UTF8.GetString(count); }

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UTS_Portal</title>
    <meta name="robots" content="noindex, nofollow">
    <meta content="" name="description">
    <meta content="" name="keywords">
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet" />
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/css/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/assets/css/boxicons.min.css" rel="stylesheet" />
    <link href="~/assets/css/quill.snow.css" rel="stylesheet" />
    <link href="~/assets/css/quill.bubble.css" rel="stylesheet" />
    <link href="~/assets/css/remixicon.css" rel="stylesheet" />
    <link href="~/assets/css/simple-datatables.css" rel="stylesheet" />
    <link href="~/assets/css/style.css" rel="stylesheet" />

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/jquery-confirm/jquery-confirm.min.css" rel="stylesheet" />

    <link href="~/css/site.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header id="header" class="header fixed-top d-flex align-items-center">
        <div class="d-flex align-items-center justify-content-between"> <a href="index.html" class="logo d-flex align-items-center"> <img src="~/images/logo/uts-logo-page.png" alt=""></a> <i class="bi bi-list toggle-sidebar-btn"></i></div>
        <div class="search-bar">
            <form class="search-form d-flex align-items-center" method="POST" action="#"> <input type="text" name="query" placeholder="Search" title="Enter search keyword"> <button type="submit" title="Search"><i class="bi bi-search"></i></button></form>
        </div>
        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">
                <li class="nav-item d-block d-lg-none"> <a class="nav-link nav-icon search-bar-toggle " href="#"> <i class="bi bi-search"></i> </a></li>
                <li class="nav-item dropdown">
                    <a class="nav-link nav-icon" data-bs-toggle="dropdown"> <i class="bi bi-bell"></i> <span class="badge bg-primary badge-number">@notiCount</span> </a>
                    @if (notiCount != "0")
                    {
                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow notifications">
                            <li class="dropdown-header"> Have @notiCount new feedbacks <a asp-controller="Feedbacks" asp-action="Index"><span class="badge rounded-pill bg-primary p-2 ms-2">View all</span></a></li>
                        </ul>
                    }

                </li>
                <li class="nav-item dropdown pe-3">
                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <img src="~/assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
                        <span class="d-none d-md-block dropdown-toggle ps-2">@username</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>@fullname</h6>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li> <a class="dropdown-item d-flex align-items-center" href="users-profile.html"> <i class="bi bi-person"></i> <span>My Profile</span> </a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li> <a class="dropdown-item d-flex align-items-center" href="users-profile.html"> <i class="bi bi-gear"></i> <span>Account Settings</span> </a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li> <a class="dropdown-item d-flex align-items-center" asp-controller="Account" asp-action="Logout"> <i class="bi bi-box-arrow-right"></i> <span>Sign Out</span> </a></li>
                    </ul>
                </li>
            </ul>
        </nav>
    </header>
    <aside id="sidebar" class="sidebar">
        <ul class="sidebar-nav" id="sidebar-nav">
            <li class="nav-item @Html.IsSelected(controller: "CopyRequest")"> <a class="nav-link " href="index.html"> <i class="bi bi-grid"></i> <span>Dashboard</span> </a></li>
            <li class="nav-item @Html.IsSelected(controller: "Users") @Html.IsSelected(controller: "Roles") @Html.IsSelected(controller: "FAQs") @Html.IsSelected(controller: "Posts") @Html.IsSelected(controller: "Feedbacks")">
                <a class="nav-link collapsed" data-bs-target="#components-nav" data-bs-toggle="collapse" href="#"> <i class="bi bi-menu-button-wide"></i><span>Administrator</span><i class="bi bi-chevron-down ms-auto"></i> </a>
                <ul id="components-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li> <a class="nav-link collapsed" asp-controller="Users" asp-action="Index"> <i class="bi bi-circle"></i><span>Users</span> </a></li>
                    <li> <a class="nav-link collapsed" asp-controller="Roles" asp-action="Index"> <i class="bi bi-circle"></i><span>Roles</span> </a></li>
                    <li> <a class="nav-link collapsed" asp-controller="Posts" asp-action="Index"> <i class="bi bi-circle"></i><span>Blogs</span> </a></li>
                    <li> <a class="nav-link collapsed" asp-controller="FAQs" asp-action="Index"> <i class="bi bi-circle"></i><span>FAQs</span> </a></li>
                    <li> <a class="nav-link collapsed" asp-controller="Feedbacks" asp-action="Index"> <i class="bi bi-circle"></i><span>Feedbacks</span> </a></li>
                </ul>
            </li>
            <li class="nav-item @Html.IsSelected(controller: "Holidays")"> <a class="nav-link collapsed" asp-controller="Holidays" asp-action="Index"> <i class="bi bi-file-earmark"></i> <span>Holidays</span> </a></li>
            <li class="nav-item @Html.IsSelected(controller: "Posts", action: "List")"> <a class="nav-link collapsed" asp-controller="Posts" asp-action="List"> <i class="bi bi-file-earmark"></i> <span>Blogs</span> </a></li>
            <li class="nav-item @Html.IsSelected(controller: "Menus")"> <a class="nav-link collapsed" asp-controller="Menus" asp-action="Index"> <i class="bi bi-layout-text-window-reverse"></i> <span>Menu</span> </a></li>
            <li class="nav-item @Html.IsSelected(controller: "Orders", action: "Index")"> <a class="nav-link collapsed" asp-controller="Orders" asp-action="Index"> <i class="bi bi-journal-text"></i> <span>Order</span> </a></li>
            @if (RoleName == "Parent")
            {
                <li class="nav-item @Html.IsSelected(controller: "Orders", action: "History")"> <a class="nav-link collapsed" asp-controller="Orders" asp-action="History" asp-route-parentId="@parentCode.Trim()"> <i class="bi bi-clock-history"></i> <span>Order History</span> </a></li>
            }
            else
            {
                <li class="nav-item @Html.IsSelected(controller: "Orders", action: "History")"> <a class="nav-link collapsed" asp-controller="Orders" asp-action="History"> <i class="bi bi-clock-history"></i> <span>Order History</span> </a></li>
            }

            @*<li class="nav-item">
            <a class="nav-link collapsed" data-bs-target="#charts-nav" data-bs-toggle="collapse" href="#"> <i class="bi bi-bar-chart"></i><span>Report</span><i class="bi bi-chevron-down ms-auto"></i> </a>
            <ul id="charts-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                <li> <a href="#"> <i class="bi bi-circle"></i><span>Chart.js</span> </a></li>
                <li> <a href="#"> <i class="bi bi-circle"></i><span>ApexCharts</span> </a></li>
                <li> <a href="#"> <i class="bi bi-circle"></i><span>ECharts</span> </a></li>
                <li> <a href="#"> <i class="bi bi-circle"></i><span>Chart.js</span> </a></li>
                <li> <a href="#"> <i class="bi bi-circle"></i><span>ApexCharts</span> </a></li>
                <li> <a href="#"> <i class="bi bi-circle"></i><span>ECharts</span> </a></li>
            </ul>
        </li>*@
            <li class="nav-item @Html.IsSelected(controller: "FAQs", action: "List")"> <a class="nav-link collapsed" asp-controller="FAQs" asp-action="List"> <i class="bi bi-question-circle"></i> <span>F.A.Q</span> </a></li>
            <li class="nav-item @Html.IsSelected(controller: "Feedbacks", action: "Create")"> <a class="nav-link collapsed" asp-controller="Feedbacks" asp-action="Create"> <i class="bi bi-envelope"></i> <span>Contact</span> </a></li>
        </ul>
    </aside>
    <main id="main" class="main">
        @RenderBody()
    </main>
    <footer id="footer" class="footer">
        <div class="copyright"> &copy; Copyright <strong><span>UTS School</span></strong>. All Rights Reserved</div>
    </footer>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-confirm/jquery-confirm.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/assets/js/apexcharts.min.js"></script>
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/chart.min.js"></script>
    <script src="~/assets/js/echarts.min.js"></script>
    <script src="~/assets/js/quill.min.js"></script>
    <script src="~/assets/js/simple-datatables.js"></script>
    <script src="~/assets/js/tinymce.min.js"></script>
    <script src="~/assets/js/validate.js"></script>
    <script src="~/assets/js/main.js"></script>
    <script src="~/assets/js/site.js"></script>
    @await Component.InvokeAsync("Notyf")
    @RenderSection("Scripts", required: false)
</body>
</html>
