@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<UTS_Portal.Models.Qa>

@{
    int CurrentPage = ViewBag.CurrentPage;
    int Total = ViewBag.Total;
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home"></i>Q&A</a>
            <span class="breadcrumb-item active">List: @Total Q&A</span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="row mb-2">
            <div class="col-lg-8">
                <a class="btn btn-primary" asp-action="Create"><i class="anticon anticon-plus-circle m-r-5"></i><span>New</span></a>
            </div>
            <div class="col-lg-4 text-right">

            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>OrderNo</th>
                        <th style="width: 30%">Title</th>
                        <th>Description</th>
                        <th style="width: 140px">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td style="max-width: 400px">
                                @Html.Raw(@item.Contents)
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-danger btn-sm text-white" onclick="Delete('@Url.Action("Delete","QA")/@item.Id')">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div>
                <ul class="pagination justify-content-end">
                    <pager class="pager-container" list="@Model" asp-controller="Posts" asp-action="Index" />
                </ul>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function Delete(url) {
            $.confirm({
                title: 'Confirm!',
                content: 'Do you want to delete this Q&A!',
                buttons: {
                    confirm: function () {
                        $.ajax({
                            type: "POST",
                            url: url,
                            success: function (data) {
                                if (data.success) {
                                    location.reload(true);
                                }
                            }
                        });
                    },
                    cancel: function () {

                    },
                }
            });
        }
    </script>
}