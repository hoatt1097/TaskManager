@{
    ViewData["Title"] = "Home Page";
}
@section Styles {
    <style>
        .dashboard img {
            width: 100%;
            max-width: 250px;
        }

        .footer {
            position: fixed;
            right: 0;
            bottom: 0;
            left: 0;
            z-index: 1030;
        }
    </style>
}

<div class="text-center dashboard">
    <div class="row">
        <div class="col-md-4 mb-3">
            <a asp-controller="Orders" asp-action="Index">
                <img src="~/images/logo/menu.png">
            </a>
        </div>
        <div class="col-md-4 mb-3">
            <a asp-controller="FAQs" asp-action="List">
                <img src="~/images/logo/faq.png">
            </a>
        </div>
        <div class="col-md-4 mb-3">
            <a asp-controller="Feedbacks" asp-action="Create">
                <img src="~/images/logo/feedback.png">
            </a>
        </div>
    </div>
</div>
