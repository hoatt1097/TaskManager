@section Styles {
    <link href="~/css/custom-order.css" rel="stylesheet" />
    <style>
        .hide {
            display: none;
        }

        .pre-order p {
            margin-bottom: 0px;
        }

        .bx {
            color: #4154f1;
            font-size: 23px;
            line-height: 0;
        }

        .order-qty {
            padding: 0;
            border: none;
            background-color: antiquewhite;
        }

        label.en, label.vn {
            position: relative;
            
        }

        label.en i, label.vn i {
            position: absolute;
            bottom: 2px;
            font-size: 15px;
            right: 5px;
            border: solid 1px #92C353;
            padding: 0 4px;
            border-radius: 50%;
            background-color: #92C353;
            color: white;
            z-index: 1;
            display: none;
        }
    </style>
}

