                        order_html = BuildReviewOrderNameVn(month);
                    }
                    if (language === "en") {
                        order_html = BuildReviewOrderNameEn(month);
                    }
                    $.confirm({
                        closeIcon: true,
                        boxWidth: '80%',
                        useBootstrap: false,
                        type: 'green',
                        typeAnimated: true,
                        icon: 'fa fa-success',
                        title: 'Review order',
                        content: order_html,
                        buttons: {
                            ChooseAgain: {
                                text: 'Choose Again',
                                btnClass: 'btn-red',
                                action: function () {
                                }
                            },
                            Submit: {
                                text: 'Ok and Submit',
                                btnClass: 'btn-success',
                                action: function () {
                                    console.log(month);
                                    $.ajax({
                                        url: '@Url.Action("OrderSubmit", "Orders")',
                                        type: "POST",
                                        dataType: "json",
                                        data: { orderSubmit: month },
                                        success: function (data) {
                                            if (data.success) {
                                                $.confirm({
                                                    title: 'Successfully!',
                                                    content: data.message,
                                                    type: 'green',
                                                    typeAnimated: true,
                                                    buttons: {
                                                        Ok: {
                                                            btnClass: 'btn-success',
                                                            action: function () {

                                                            }
                                                        },
                                                    }
                                                });
                                            } else {
                                                $.confirm({
                                                    title: 'Error!',
                                                    content: data.message,
                                                    type: 'red',
                                                    typeAnimated: true,
                                                    buttons: {
                                                        Ok: {
