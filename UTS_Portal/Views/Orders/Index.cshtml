                        closeIcon: true,
                        columnClass: 'col-md-12',
                        type: 'red',
                        typeAnimated: true,
                        icon: 'fa fa-warning',
                        title: 'You need to complete the food selection for the whole month',
                        content: error_html,
                        buttons: {
                            ChooseAgain: {
                                text: 'Choose Again',
                                btnClass: 'btn-red',
                                action: function () {
                                }
                            },
                        }
                    });
                }
